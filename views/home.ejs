<div id="main">
    <main>
        <div id="division-one">
            <h1>Welcome to ShareNet</h1>
            <p id="success"><%- success %></p>
            <p id="error"><%- error %></p>
        </div>
    
        <article>
            Lorem, ipsum dolor sit amet consectetur adipisicing elit. Et, nisi.
        </article>
    
        <div>
            <% if(currentUser){ %>
                <a id="btn" href="/content">All posts</a>
            <%}%>
            <% if(!currentUser){ %>
                <a id="btn" href="/login">Login</a>
            <%}%>
        </div>
    </main>
</div>

